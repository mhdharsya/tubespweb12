extends layout

block content
  .container.mx-auto.mt-5
    h1.text-xl.font-bold Data Mata Kuliah
    .table-container.mt-4
      .flex.justify-between.items-center.mb-3.bg-blue-950.px-2.py-2
        input#searchInput.form-control.rounded.px-2.py-2.search(type="text" placeholder="Cari nama mata kuliah")
        a.btn.btn-primary.ml-2(href='/matkul/create') Edit
      .table-responsive
        table#dataTable.table.table-bordered
          thead
            tr
              th #
              th Kode Mata Kuliah
              th Mata Kuliah
              th Kelas
              th Dosen Pengampu
              th Jumlah Mahasiswa
          tbody
            each matkul, index in matkuls  
              tr
                td= index + 1  
                td= matkul.kode_matkul 
                td= matkul.matkul  
                td= matkul.kelas  
                td= matkul.dosen  
                td= matkul.jumlah_mahasiswa
