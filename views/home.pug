doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Data Mata Kuliah
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css")
    style.
      body {
        background-color: #f4f6f9;
      }
      .sidebar {
        background-color: #0d2f81;
        color: #fff;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .sidebar a {
        color: #fff;
        text-decoration: none;
        padding: 10px;
        transition: 0.3s;
      }
      .sidebar a:hover {
        background-color: #1a56f0;
      }
      .header {
        background-color: #0d2f81;
        color: #fff;
      }
      .table-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .img-logo {
        height: 100px;
        width: 100px;
      }
      .search {
        width: 50%;
      }
      .main-content {
        margin-left: 0;
      }
      .hamburger {
        display: none;
        cursor: pointer;
      }
      .bar {
        display: block;
        width: 25px;
        height: 3px;
        margin: 5px auto;
        background-color: #fff;
        transition: all 0.3s;
      }
      @media (max-width: 768px)
        .sidebar {
          transform: translateX(-100%);
        }
        .sidebar.active {
          transform: translateX(0);
        }
        .hamburger {
          display: block;
        }
        .main-content {
          margin-left: 0 !important;
        }

  body
    .container-fluid
      .row.flex-nowrap
        // Sidebar
        .col-md-2.sidebar
          .d-flex.flex-column.justify-content-between.pt-4
            img(src="https://p7.hiclipart.com/preview/115/812/961/logo-kementerian-pendidikan-dan-kebudayaan-indonesia-others.jpg" alt="Logo" class="img-logo mb-1")
            nav.nav.flex-column.mt-4
              a.nav-link.active(href="#") Dashboard
              a.nav-link(href="#") Profil
              a.nav-link(href="#") Nilai
              a.nav-link(href="#") Mata Kuliah
              a.nav-link(href="#") Mahasiswa
              a.nav-link(href="#") Bantuan
            div
              // Empty div to push the content to the top

        // Main Content
        .col-md-10.offset-md-2.main-content
          .header.p-3
            .d-flex.justify-content-between.align-items-center
              .content
                h2 Tahun Ajaran 2023/2024
                p Semester Genap
              button.btn.btn-dark Admin
              // Hamburger Button
              .hamburger.d-lg-none
                .bar
                .bar
                .bar

          .table-container.mt-4
            .input-group.mb-3.d-flex.justify-content-between
              input.form-control.search(type="text" placeholder="Cari nama mata kuliah")
              button.btn.btn-primary Edit
            .table-responsive
              table.table.table-bordered
                thead
                  tr
                    th #
                    th Kode Mata Kuliah
                    th Mata Kuliah
                    th Kelas
                    th Dosen Pengampu
                    th Jumlah Mahasiswa
                tbody
                  tr
                    td 1
                    td JSI8080
                    td Pemograman Web
                    td A
                    td Husnil Kamil M.T
                    td 35

    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js")
    script.
      document.addEventListener('DOMContentLoaded', function() {
        const hamburger = document.querySelector('.hamburger');
        const sidebar = document.querySelector('.sidebar');

        hamburger.addEventListener('click', function() {
          sidebar.classList.toggle('active');
        });
      });
